{
  "extends": ["stylelint-config-standard-scss"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["apply", "layer", "tailwind"]
      }
    ],
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["apply", "layer", "tailwind"]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["line-clamp"]
      }
    ]
  }
}
